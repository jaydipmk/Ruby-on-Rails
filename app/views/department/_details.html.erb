<div class="container">
	<table class="table table-bordered" >
		<thead>
			<tr>
				<th>No.</th>
				<th>Name</th>
				<th>Remark</th>
				<th>Status</th>
				<th colspan="3"><center>Actions</center></th>
			</tr>
		</thead>
	  <tbody>
		<% no = 0	 %>
			<% @department.each do |d| %>
			<tr>
				<td><%= no+= 1 %></td>
				<td><%= link_to d.Name , designation_path(d.id) %></td>
				<td><%= d.Remark%></td>
				<td><%= d.status%></td>
				<td><%= link_to "Show", department_path(d.id)%></td>
				<td><%= link_to "Edit",  edit_department_path(d.id) %></td>
				<td><%= link_to "Delete", department_path(d.id), method: :delete %></td>
			<% end %>
			</tr>
		</tbody>
	</table>
</div>
