<div class="container", id="department_details">
	<table class="table table-bordered" >
		<thead>
			<tr>
				<th>No.</th>
				<th>Name</th>
				<th>Remark</th>
				<th>Status</th>
				<th colspan="3"><center>Actions</center></th>
			</tr>
		</thead>
	  <tbody class="dept_details">
	  		<% no = 0 %>
				<% @department.each do |d| %>
					<tr id="@department.id">
						<td><%= no+= 1 %></td>
						<td><%= d.Name %><%#= link_to d.Name , designation_path(d.id) %></td>
						<td><%= d.Remark%></td>
						<td><%= d.status%></td>
						<td><%= link_to "Show", department_path(d.id), remote: true %></td>
						<% if check_admin %>
						<td><%= link_to "Edit",  edit_department_path(d.id), remote: true %></td>
						<td><%= link_to "Delete", department_path(d.id), method: :delete,
						data: {confirm: 'Are You Sure?'},remote: true , 
						:class => "delete_dept"%></td>
						<% end %>
					</tr>
				<% end %>
		</tbody>
	</table>
</div>
