<h2 class="header2">Add new Designation:</h2>
<div class="row" id="designation_new">
  <div class="col-md-6 col-md-offset-3" >
    <%= form_for(@designation, url: designation_index_path, remote: true)	do |f| %>
      <%= f.label :Post %>
      <%= f.text_field :post, class: 'form-control' %>
      <br>
      <%= f.collection_select :department_id,Department.all,:id, :Name %>
      <br>
      <br>
      <%#= f.hidden_field :department_id, value: params[:id] %>
      <%= f.submit "Add", class: "btn btn-primary" %>  |  
      <%= link_to "Cancel", " ", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>	