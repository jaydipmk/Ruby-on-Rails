<div class="row" id="new_leave">
  <div class="col-md-6 col-md-offset-3" >

    <%= form_for(@leave,url: leave_index_path, remote: true ) do |f| %>
      <span id="helpBlock" class="help-block"></span>
      <%= f.label :StartDate %>
      <%= f.date_field :Start_Date, class: 'form-control' %>
      <br>
      <%= f.label :EndDate %>
      <%= f.date_field :End_Date, class: 'form-control' %>
      <br>
      <%= f.label :Reason %>
      <%= f.text_area :Reason, size:'50*10', class: 'form-control' %>
      <br>
      <%= f.hidden_field :login_master_id, value: @emp.id %>
      <br>
      <%= f.submit "Apply", class: "btn btn-primary" %>  |  
      <%= link_to "cancel", " ", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
