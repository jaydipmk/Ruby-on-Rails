var errors = ""
<% if @leave.errors.any? %>
	<% @leave.errors.full_messages.each do |m| %>
		errors += "<div class='notice alert-danger'><%= escape_javascript(m)%></div>" 
		<% end %>	
		$("#helpBlock").html(errors);
<% else %>
	$(".leave_details").html("<%= escape_javascript(render 'index') %>")
	$("#leave-modal").modal("hide")
<% end %>